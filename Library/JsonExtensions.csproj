<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>JSON Extensions</Title>
    <Authors>viral32111</Authors>
    <Description>Useful creation &amp; extension methods for System.Text.Json types.</Description>
    <Copyright>Copyright (C) 2022 viral32111</Copyright>
    <RepositoryUrl>https://github.com/viral32111/JsonExtensions</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>json; dotnet; package; nuget</PackageTags>
    <AssemblyVersion>$(FileVersion)</AssemblyVersion>
    <FileVersion>0.2.0</FileVersion>
    <NeutralLanguage>en-GB</NeutralLanguage>
    <Version>$(FileVersion)</Version>
    <PackageLicenseExpression>AGPL-3.0-only</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <RootNamespace>viral32111.JsonExtensions</RootNamespace>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageId>viral32111.JsonExtensions</PackageId>
    <AssemblyName>$(Authors).$(MSBuildProjectName)</AssemblyName>
    <PackageProjectUrl>https://github.com/viral32111/JsonExtensions/packages/1617512</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
